{
  "expo": {
    "name": "Designated Driver",
    "slug": "designated-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.designateddriver.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#000000"
      },
      "package": "com.designateddriver.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Designated Driver to use your location for driver tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Designated Driver to take photos for trunk verification and damage claims."
        }
      ]
    ],
    "scheme": "designateddriver"
  }
}

